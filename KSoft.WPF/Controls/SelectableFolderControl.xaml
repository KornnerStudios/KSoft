<UserControl x:Class="KSoft.WPF.Controls.SelectableFolderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:KSoftWpfControls="clr-namespace:KSoft.WPF.Controls"
             mc:Ignorable="d"
             d:DesignWidth="196">
    <DockPanel>
		<Button Height="Auto" Margin="0" Padding="0" DockPanel.Dock="Right" Click="OnClearClick">Clear</Button>
		<Button Height="Auto" Margin="0" Padding="0" DockPanel.Dock="Right" Click="OnBrowseClick">Browse</Button>
		<TextBox Height="Auto" HorizontalAlignment="Stretch" DockPanel.Dock="Right" IsReadOnly="True" IsReadOnlyCaretVisible="True"
           Text="{Binding Text, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type KSoftWpfControls:SelectableFolderControl}}}" />
    </DockPanel>
</UserControl>
